<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <color name="app_themeColor">#00CC00</color>
 	<color name="app_darkColor">#767676</color>
    <color name="list_background">#e5e5e5</color>
    <color name="list_background_pressed">#84d4ff</color>
    <color name="list_item_title">#000000</color>
    <color name="counter_text_bg">#111</color>
    <color name="counter_text_color">#fff</color>
    <color name="button_recordColor">#ff0000</color>
    <color name="button_highlightColor">#84d4ff</color>
	<style name="Main" parent="@style/appTheme">
	    <item name="android:windowBackground">@drawable/splash_screen1</item>
<!-- 	    <item name="android:windowNoTitle">true</item> -->
	</style>
	
	<style name="appTheme" parent="@style/Theme.AppCompat.Light">
	    <item name="android:windowBackground">@drawable/splash_screen1</item>
	    <item name="android:colorBackground">@color/app_themeColor</item>
	    <item name="android:actionBarStyle">@style/app_actionBar</item>
	    <item name="android:editTextStyle">@style/app_editTextStyle</item>
	    <item name="android:buttonStyle">@style/app_button</item>
	    <item name="android:textViewStyle">@style/app_textViewStyle</item>
	    
    <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/app_actionBar</item>
	</style>

    <!-- ActionBar styles -->
	    <style name="app_actionBar"
	           parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
	        <!-- <item name="android:background">@drawable/actionbar_background</item>
			-->
	        <!-- Support library compatibility -->
	        <!-- <item name="background">@drawable/actionbar_background</item>
	        <item name="android:background">@color/app_darkColor</item> -->

        <!-- Support library compatibility -->
	        <item name="background">@color/app_darkColor</item>
	    </style>
    
    <!-- Style TextViews -->
	    <style name="app_editTextStyle" 
	        parent="@android:style/Widget.EditText">
	    	<item name="android:background">@drawable/text_back</item>
	    	<item name="android:textColorHint">#A6A6A6</item>
	    	<item name="android:padding">10dip</item>
	    </style>
    
    <!-- Style buttons -->
		<style name="app_button">
		    <item name="android:background">@android:drawable/btn_default</item>
		    <item name="android:focusable">true</item>
		    <item name="android:clickable">true</item>
		    <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
		    <item name="android:textColor">@android:color/primary_text_light</item>
		    <item name="android:gravity">center_vertical|center_horizontal</item>
		</style>
		
		<style name="button_pressed"
				parent="@android:style/Widget.Button">
		    <item name="android:background">@color/button_recordColor</item>
		</style>
		
		<style name="button_focused"
				parent="@android:style/Widget.Button">
		    <item name="android:background">@color/button_highlightColor</item>
		</style>
		
	<!-- Style TextView -->
		<style name="app_textViewStyle" parent="@android:style/Widget.TextView">
		    <item name="android:textSize">20sp</item>
		</style>
		
		<style name="main_textViewStyle" parent="@android:style/Widget.TextView">
		    <item name="android:textSize">30sp</item>
		</style>

</resources>
